{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "CMake Build",
		"type": "shell",
		"command": "cmake",
		"args": [
		  "-S", ".",
		  "-B", "build"
		],
		"group": "build",
		"problemMatcher": []
	  },
	  {
		"label": "CMake Compile",
		"type": "shell",
		"command": "cmake",
		"args": [
		  "--build", "build"
		],
		"dependsOn": ["CMake Build"],
		"group": "build",
		"problemMatcher": []
	  },
	  {
		"label": "Run Executable",
		"type": "shell",
		"command": "./build/main.exe",
		"dependsOn": ["CMake Compile"],
		"group": "test",
		"problemMatcher": []
	  }
	]
  }