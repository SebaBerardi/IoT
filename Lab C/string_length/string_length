#include <stdint.h>

// Devuelve la longitud del string (n√∫mero de caracteres antes del '\0'),
// o -1 si string es NULL.
int32_t string_length(char *string) {
    if (string == NULL) {
        return -1;  // Error: puntero nulo
    }

    int32_t len = 0;
    while (string[len] != '\0') {
        len++;
    }

    return len;
}
